root = true

[*]
charset = utf-8
end_of_line = LF
indent_style = space
indent_size = 4

[Gopkg.{lock,toml}]
indent_size = 2
insert_final_newline = true

[*.md]
trim_trailing_whitespace = true

[*.yaml]
indent_size = 2
trim_trailing_whitespace = true

[*.go]
indent_style = tab
trim_trailing_whitespace = true
insert_final_newline = true
